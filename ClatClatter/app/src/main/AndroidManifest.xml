<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jacklee.clatclatter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- 将闪屏页面作为APP的开启页面 -->
        <activity android:name=".SplashActivity"
            android:theme="@style/launch_theme">
        android:theme="@style/AppTheme"
        android:testOnly="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- APP的主程序页面 -->
        <activity android:name=".MainActivity">
        </activity>

        <!--锁定任务Acvitity-->
        <activity
            android:name=".LockedActivity"
            android:label="@string/title_activity_locked"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!--注册创建任务活动-->
        <activity android:name=".CreateTaskActivity">
        </activity>
        <!--注册创建任务活动-->
        <activity android:name=".DateTime">
        </activity>
        <!--注册创建任务活动-->
        <activity android:name=".DateTime2">
        </activity>

        <receiver
            android:name="com.jacklee.clatclatter.DeviceAdminReceiver"
            android:description="@string/app_name"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin_receiver" />
            <intent-filter>
                <action android:name="android.intent.action.DEVICE_ADMIN_ENABLED"/>
                <action android:name="android.intent.action.PROFILE_PROVISIONING_COMPLETE"/>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>