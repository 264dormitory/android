<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CFCFCF">

    <android.support.v7.widget.Toolbar
        android:id="@+id/yyy_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#E0E0E0"
            app:cardCornerRadius="15dp"
            >
    <TextView xmlns:liming="http://schemas.android.com/apk/res/com.jacklee.clatclatter"
        android:id="@+id/select_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:text="系统音乐"
        android:textSize="16sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:cardBackgroundColor="#E0E0E0"
            app:cardCornerRadius="20dp">
    <ListView
        android:id="@+id/ring_listview"
        android:layout_height="150dp"
        android:layout_width="match_parent"
        android:divider="#cccccc"
        android:dividerHeight="1dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        />
        </android.support.v7.widget.CardView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:onClick="song_select"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#E0E0E0"
                app:cardCornerRadius="15dp"
               >
            <TextView xmlns:liming="http://schemas.android.com/apk/res/com.jacklee.clatclatter"
                android:id="@+id/select_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="本地音乐"
                android:textSize="16sp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#E0E0E0"
                app:cardCornerRadius="20dp">
    <ListView
        android:id="@+id/ring_listview1"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:divider="#cccccc"
        android:dividerHeight="1dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        />
            </android.support.v7.widget.CardView>
        </LinearLayout>

</LinearLayout>
